{
  "name": "nestjs-telegram-helpdesk",
  "version": "1.1.5",
  "description": "Telegram Helpdesk Bot",
  "author": "kovalenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/artxru/nestjs-telegram-helpdesk.git"
  },
  "bugs": {
    "url": "https://github.com/artxru/nestjs-telegram-helpdesk/issues"
  },
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/orm.config.ts",
    "typeorm:prod": "node ./node_modules/typeorm/cli.js --config ./dist/orm.config.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:prod": "npm run typeorm:prod migration:run",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@kovalenko/is-cron": "^1.0.9",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/typeorm": "~8.0.4",
    "bull": "^4.8.3",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "js-yaml": "^4.1.0",
    "nestjs-i18n": "^9.1.0",
    "nestjs-telegraf": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "telegraf": "^4.8.2",
    "telegraf-postgres-session": "^1.0.5",
    "typeorm": "^0.2.45",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/npm": "^9.0.1",
    "@types/bull": "^3.15.8",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "semantic-release": "^19.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "files": [
    "dist/**/*",
    "Dockerfile",
    "docker-compose.yml",
    "settings.example.yml",
    "README.md",
    "nest-cli.json",
    "start.sh",
    "package-lock.json",
    "ecosystem.config.example.js",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  }
}
